{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Premier League Top Team Rankings Over Seasons (Color-Blind Friendly)",
    "width": 550,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/jypang11/Datasets/refs/heads/main/Team_Points_and_Ranks.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "filter": "datum.Rank <= 4"
        },
        {
            "calculate": "datum.Team == 'Manchester United' ? 'Manchester Utd' : datum.Team",
            "as": "Team_Display"
        },
        {
            "filter": "indexof(['Manchester City', 'Chelsea', 'Liverpool', 'Arsenal', 'Manchester Utd'], datum.Team_Display) >= 0"
        }
    ],
    "encoding": {
        "x": {
            "field": "Season_End_Year",
            "type": "ordinal",
            "sort": "ascending",
            "title": "Season End Year"
        },
        "y": {
            "field": "Rank",
            "type": "quantitative",
            "sort": "descending",
            "title": "Team Ranking",
            "axis": {
                "tickCount": 4
            }
        }
    },
    "layer": [
        {
            "params": [
                {
                    "name": "team_select",
                    "select": {
                        "type": "point",
                        "on": "click",
                        "fields": ["Team_Display"]
                    },
                    "bind": "legend"
                }
            ],
            "mark": {
                "type": "circle"
            },
            "encoding": {
                "size": {
                    "condition": {
                        "param": "team_select",
                        "empty": false,
                        "value": 100
                    },
                    "value": 60
                },
                "color": {
                    "field": "Team_Display",
                    "type": "nominal",
                    "scale": {
                        "domain": ["Manchester City", "Chelsea", "Liverpool", "Arsenal", "Manchester Utd"],
                        "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
                    },
                    "legend": {
                        "title": "Team"
                    }
                },
                "tooltip": [
                    {"field": "Team_Display", "title": "Team"},
                    {"field": "Rank"},
                    {"field": "Season_End_Year"}
                ]
            }
        },
        {
            "mark": {
                "type": "line",
                "strokeWidth": 2
            },
            "encoding": {
                "color": {
                    "condition": {
                        "param": "team_select",
                        "empty": false,
                        "field": "Team_Display",
                        "scale": {
                            "domain": ["Manchester City", "Chelsea", "Liverpool", "Arsenal", "Manchester Utd"],
                            "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
                        }
                    },
                    "value": "lightgray"
                },
                "opacity": {
                    "condition": {
                        "param": "team_select",
                        "empty": false,
                        "value": 1
                    },
                    "value": 0.2
                }
            }
        }
    ]
}